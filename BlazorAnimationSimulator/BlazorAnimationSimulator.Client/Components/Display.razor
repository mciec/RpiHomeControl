@using Animations1d.Display


<div style="width: 100%; display:flex ">

    @for (int i = 0; i < matrix?.Length; i++)
    {
        <div name='aaa' style='margin: 1px; border: 1px; width: 10px; height: 20px; background-color: rgb(@matrix[i].R, @matrix[i].G, @matrix[i].B)'></div>
    }

</div>

@code {
    [Parameter]
    public RGB[] matrix { get; set; }

}
